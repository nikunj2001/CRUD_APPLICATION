<form action="/api/users" id="add_user" method="POST">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="" placeholder="Enter Your Name" id="">
        </div>
        <div class="form-group">
            <label for="Email" class="text-light">Email</label>
            <input type="text" name="name" value="" placeholder="Enter Your Email" id="">
        </div>
        <div class="form-group">
            <label for="gender" class="text-light">Gender</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="gender" value="Male" id="">
                <label for="radio-2" class="radio-label">Male</label>

            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="gender" value="Female" id="">
                <label for="radio-3" class="radio-label">Female</label>

            </div>
        </div>
        <div class="form-group">
            <label for="status" class="text-light">Status</label>
            <div class="radio inline">
                <input type="radio" id="radio-4" name="status" value="Active" id="">
                <label for="radio-4" class="radio-label">Active</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-5" name="status" value="Inactive" id="">
                <label for="radio-5" class="radio-label">Inactive</label>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn text-dark">Save</button>
        </div>
    </div>
</form>